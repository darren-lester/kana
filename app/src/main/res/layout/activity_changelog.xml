<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_changelog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.darrenlester.kana.ChangelogActivity">

    <LinearLayout
        android:id="@+id/changelog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/changelog_title"
            android:textAppearance="?android:textAppearanceMedium"/>

        <LinearLayout
            style="@style/ChangelogEntry">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_title_1.1.3" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_description_1.1.3"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ChangelogEntry">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_title_1.1.2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_description_1.1.2"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ChangelogEntry">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_title_1.1.1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_description_1.1.1"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ChangelogEntry">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_title_1.1.0" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_description_1.1.0"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ChangelogEntry">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_title_1.0.1" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_description_1.0.1"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ChangelogEntry">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_title_1.0.0" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changelog_description_1.0.0"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
